<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_week_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/text_ring_normal"
        android:gravity="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text_week_left_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="22dp"
        android:layout_toLeftOf="@id/text_week_center"
        android:background="@drawable/text_ring_normal"
        android:gravity="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text_week_left_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="22dp"
        android:layout_toLeftOf="@id/text_week_left_one"
        android:background="@drawable/text_ring_normal"
        android:gravity="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text_week_left_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="22dp"
        android:layout_toLeftOf="@id/text_week_left_two"
        android:background="@drawable/text_ring_normal"
        android:gravity="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text_week_right_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@id/text_week_center"
        android:background="@drawable/text_ring_normal"
        android:gravity="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text_week_right_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@id/text_week_right_one"
        android:background="@drawable/text_ring_normal"
        android:gravity="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text_week_right_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@id/text_week_right_two"
        android:background="@drawable/text_ring_normal"
        android:gravity="center"
        android:textSize="15dp" />

</RelativeLayout>
